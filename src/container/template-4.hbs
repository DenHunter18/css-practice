<header class="header">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav ">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <img src="{{image}}" alt="Main image" class="main_image">
    <div class="main_content">
        <h1 class="main_heading">{{heading}}</h1>
        <p class="main_description">{{description}}</p>
        <a class="button main_button" href="{{href}}">{{button}}</a>
    </div>
</div>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</div>


<div class="form">
    {{#each actions}}
    {{> cardForm data=this}}
    {{/each}}
</div>



<footer class="footer">
    <div class="">
        {{> logo}}
        <span class="footer_copyright">Copyright 2022-2023</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>